{
  "name": "sample-apis",
  "version": "1.0.0",
  "description": "An Express.js template with TypeScript, ESLint, Prettier, Vitest, Husky, Rate Limiter, Morgan, Cors and Helmet",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch --env-file .env.development src/server.ts",
    "dev:prod": "tsx --watch --env-file .env.production src/server.ts",
    "start": "node --env-file .env.production dist/server.js",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "check-before-commit": "eslint . && prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anand-jaiswal-IN/sample-apis.git"
  },
  "keywords": [],
  "author": "Anand Jaiswal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/anand-jaiswal-IN/sample-apis/issues"
  },
  "homepage": "https://github.com/anand-jaiswal-IN/sample-apis#readme",
  "imports": {
    "#*": "./src/*"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.44.4",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "postgresql": "^0.0.1",
    "resend": "^6.0.1",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.33.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  }
}
